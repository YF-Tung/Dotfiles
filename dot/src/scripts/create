#!/bin/bash
#By yftung, 2017/02/14

supportingTypes=("bash")
result=""

function askFor()
{
    echo $1
    read line
    result=$line
}

# main
if [ "$#" -ne 1 ] ; then
    echo "Please specify type. Supporting types are:"
    for types in ${supportingTypes}
    do
	echo " + ${types}"
    done
elif [ "$1" == "bash" ] ; then

    askFor "What is the file name?"
    arg_fileName=$result

    if [ -f ${arg_fileName} ] ; then
	echo "File already exists! Failed to create."
    elif [ -d ${arg_fileName} ] ; then
	echo "Folder already exists! Failed to create."
    else
	echo "Creating bash template..."
	echo "#!/bin/bash" >> ${arg_fileName}
	echo "" >> ${arg_fileName}
	chmod +x ${arg_fileName}
	echo "Done"
	vi ${arg_fileName}
    fi

else
    echo "Illegal type: $1"
fi

